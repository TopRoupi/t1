---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    <nav>
      <div class="nav-container">
        <img src="/images/logo.png">
        <a href="/">Home</a>
        <a href="/quem-somos">Quem somos</a>
        <a href="/missao">Miss√£o</a>
      </div>
    </nav>

    <div class="container main-container">
      <slot />
    </div>

    <footer>
      <div  class="container">
        <span>contatos</span><br>
        <span>email: conexaoesportiva@gmail.com</span><br>
        <span>telefone: +55 11983749585</span>
      </div>
    </footer>
	</body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css?family=Poppins:700|Poppins:400');

  body {
    font-family: 'Poppins';
    font-weight: 400;
  }

  h1, h2, h3, h4, h5 {
    font-family: 'Poppins';
    font-weight: 700;
  }

  h1 {
    text-align: center;
  }

  html {font-size: 100%;} /* 16px */

 :root {
    --background: #fcfdfc;
    --text: #141f16;
    --primary: #98cda2;
    --primary-hover: rgba(152, 205, 162, 0.7);
    --accent: #4c9e5b;
    --secondary: #cfe8d3;
  }

  .icard {
    border-radius: 10px;
    border: solid 1px rgba(0,0,0,0.2);
    padding: 20px;
    display: flex;
    margin-bottom: 30px;
  }


  .icard img {
    width: 150px;
    height: 150px;
    object-fit: cover;
  }

  .icard-content {
    margin-left: 10px;
  }

  .icard-content span {
    font-weight: 700;
    font-size: 20px;
  }

  .card {
    background-color: var(--secondary);
    padding: 30px;
    border-radius: 10px;
    margin: 0px 20px 30px 20px;
  }

  .card a {
    margin-left: auto;
    display: block;
    width: fit-content;
    text-decoration: none;
    color: var(--text);
    background-color: var(--primary);
    padding: 10px 20px;
    border-radius: 5px;
  }

  .card a:hover {
    background-color: var(--primary-hover);
  }

  .card h2 {
    margin-top: 0px;
  }

  footer {
    background-color: black;
    color: white;
    width: 100%;
    margin-top: 30px;
    padding: 40px 0px;
  }

  footer .container span {
    margin: 0px 20px;
  }

  .container {
    display: block;
    margin: auto;
    max-width: 1200px;
    width: 100%;
  }

  .main-container {
    min-height: 100vh;;
  }

  .nav-container {
    display: flex;
    margin: auto;
    max-width: 1200px;
    width: 100%;
  }

  .nav-container img {
    width: 40px;
    margin-right: 15px;
  }

  nav {
    padding: 10px;
    display: flex;
    border-bottom: 1px solid rgba(0,0,0,0.2)
  }

  nav a {
    margin-right: 10px;
    padding: 10px 10px;
    background-color: var(--primary);
    color: var(--text);
    border-radius: 5px;
    text-decoration: none;
  }

  nav a:hover {
    background-color: var(--primary-hover);
  }

  nav a:active {
    background-color: var(--primary);
  }

  body {
    margin: 0px;
    background-color: var(--background);
    color: var(--text);
  }
</style>
